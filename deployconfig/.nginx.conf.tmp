user  wcl6005;
worker_processes  1;
events {
    worker_connections  1024;
}

http {
    include       mime.types;
    default_type  application/octet-stream;
    sendfile        on;
    keepalive_timeout  65;

server {
    listen      80;
    server_name 192.168.1.102 0.0.0.0;
    root        /home/www/ProjectName-0001;
    access_log  /home/www/ProjectName-0001/logs/nginx.access.log;
    error_log   /home/www/ProjectName-0001/logs/nginx.error.log;
    
    # 处理静态文件/favicon.ico:
    location /favicon.ico {
        root /home/www/ProjectName-0001/src/mysite;
    }

    # 处理静态资源:
    location ~ ^\/static\/.*$ {
        root /home/www/ProjectName-0001/src/mysite;
    }
    location ~ ^\/front\/.*$ {
        root /home/www/ProjectName-0001/src;
    }
    location ~ ^\/example\/.*$ {
        root /home/www/ProjectName-0001/src;
    }
    
    location / {
        #proxy_pass       http://localhost:8000;
        #proxy_set_header Host $host;
        #proxy_set_header X-Real-IP $remote_addr;
        #proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

        proxy_pass http://unix:/home/www/ProjectName-0001/mysite.sock;
        proxy_set_header Host $http_host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
    }
}
}


